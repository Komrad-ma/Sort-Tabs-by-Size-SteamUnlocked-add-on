{
  "manifest_version": 2,
  "name": "Sort Tabs by Size (SteamUnlocked)",
  "version": "1.0",
  "description": "Sort tabs by size of SteamUnlocked website.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "<all_urls>",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Sort Tabs"
  },
  "icons": {
    "48": "icon.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sort-tabs-by-xpath@example.com"
    }
  }
}
